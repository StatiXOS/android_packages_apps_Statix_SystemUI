<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/torch_strength_pct_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/flashlight_dialog_slider_height"
        android:layout_gravity="center_vertical|start"
        android_clickable="false"
        android:fontFamily="@*android:string/config_bodyFontFamily"
        android:textSize="20sp"
        android:gravity="center"
        android:paddingStart="8dp"
        android:textColor="?android:attr/textColorPrimary" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <SeekBar
            android:id="@+id/torch_strength_seekbar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/flashlight_dialog_slider_height"
            android:layout_gravity="center_vertical|end"
            android:clickable="false"
            android:paddingBottom="0dp"
            android:paddingEnd="20dp"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:progressDrawable="@drawable/flashlight_dialog_seekbar"
            android:rotation="270"
            android:thumb="@android:color/transparent" />

    </FrameLayout>

</FrameLayout>
